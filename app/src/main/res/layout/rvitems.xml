<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/relativelayoutid"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    android:layout_marginLeft="2dp"
    android:layout_marginRight="2dp"
    android:layout_marginTop="10dp"
    android:background="@drawable/rvbackground"
    android:elevation="2dp"
    android:gravity="center"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/rvtext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginLeft="15dp"
        android:layout_alignParentLeft="true"
        android:text="Pizza"/>
    <ImageView
        android:id="@+id/rvedit"
        android:layout_toRightOf="@+id/rvtext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="25dp"
        android:src="@drawable/editicon"/>
    <ImageView
        android:id="@+id/rvdownoad"
        android:layout_toRightOf="@+id/rvedit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:src="@drawable/downloadicon"/>

</RelativeLayout>